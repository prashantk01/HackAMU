<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="chatmessage"
            type="com.sg.hackamu.model.ChatMessage"/>
    </data>

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        tools:targetApi="lollipop">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <TextView
                android:id="@+id/textViewotherstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{chatmessage.messageText}"
                android:layout_alignParentStart="true"
                android:textSize="14sp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/textViewotherstime"
                android:textSize="12sp"
                android:layout_below="@id/textViewotherstext"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:text="@{chatmessage.messageTime}"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>
