<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="ClickHandlers"
            type="com.sg.hackamu.LauncherActivity.LauncherActivityClickHandlers"/>
    </data>

<android.widget.LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
   >


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="255dp"
        android:layout_height="146dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/hackamu"
        tools:ignore="contentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="25dp">

        <Button
            android:id="@+id/button1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:clickable="true"
            android:elevation="8dp"
            android:onClick="@{ClickHandlers::onButton1Clicked}"
            android:fadingEdge="horizontal|vertical"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:stateListAnimator="@null"
            android:text="@string/library_login"
            android:textStyle="bold"
            tools:targetApi="m" />

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:clickable="true"
            android:elevation="8dp"
            android:onClick="@{ClickHandlers::onButton2Clicked}"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:stateListAnimator="@null"
            android:text="@string/teacher_s_login"
            android:textStyle="bold"
            tools:targetApi="m" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:padding="25dp">

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:stateListAnimator="@null"
            android:elevation="8dp"
            android:onClick="@{ClickHandlers::onButton3Clicked}"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:background="@drawable/circle"
            android:text="@string/student_login"
            android:textStyle="bold"
            tools:targetApi="m"
            android:focusable="true" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:stateListAnimator="@null"
            android:elevation="8dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_marginStart="35dp"
            android:onClick="@{ClickHandlers::onButton4Clicked}"
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:background="@drawable/circle"
            android:text="@string/alumni_login"
            android:textStyle="bold"
            tools:targetApi="m"
            android:focusable="true" />
    </LinearLayout>
</android.widget.LinearLayout>
</layout>


