<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dimen_4x"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/textViewmytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:padding="@dimen/dimen_8x"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/textViewmytime"
            android:textSize="12sp"
            android:layout_below="@id/textViewmytext"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/dimen_8x"
            android:paddingEnd="@dimen/dimen_8x"
            android:layout_height="wrap_content"
            android:text="Text"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
